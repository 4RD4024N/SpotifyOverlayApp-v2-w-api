<Window x:Class="SpotifyOverlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayarlar" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Border x:Name="rootBorder" Background="#252525" CornerRadius="14" Padding="20">

        <StackPanel>

            <TextBlock Text="🛠️ Ayarlar" FontSize="20" Foreground="White" Margin="0,0,0,15"/>

            <CheckBox x:Name="rgbCheckbox" Content="✨ RGB Animasyonlu Tema" 
                      Foreground="White" FontSize="14" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" x:Name="rgbSpeedPanel" Visibility="Collapsed">
                <TextBlock Text="⚡ RGB Animasyon Hızı" Foreground="White" VerticalAlignment="Center" Width="150"/>
                <Slider x:Name="rgbSpeedSlider" Minimum="1" Maximum="10" Width="180"/>
            </StackPanel>

            <TextBlock Text="🎨 Tema Seçimi" Foreground="White" FontSize="14" Margin="0,20,0,5"/>
            <ComboBox x:Name="themeComboBox" FontSize="13" Width="200">
                <ComboBoxItem>Koyu Tema 🌙</ComboBoxItem>
                <ComboBoxItem>Açık Tema ☀️</ComboBoxItem>
                <ComboBoxItem>Mor Tema 💜</ComboBoxItem>
                <ComboBoxItem>Gece Mavisi 🌌</ComboBoxItem>
                <ComboBoxItem>RGB (Animasyonlu) 🌈</ComboBoxItem>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                <Button Content="💾 Kaydet" Width="120" Height="36" Click="Save_Click"
                        Background="#3A3A3A" Foreground="White" Cursor="Hand"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
